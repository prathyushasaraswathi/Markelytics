<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:orientation="vertical"    android:weightSum="5" >    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/bg_two"        android:orientation="horizontal"        android:padding="5dp" >        <TextView            android:id="@+id/txt1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:text="Complete profiling info -"            android:textColor="@color/black"            android:textSize="17sp"            android:textStyle="bold" />        <TextView            android:id="@+id/txt_queCategory"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginLeft="5dp"            android:textColor="@color/text_color"            android:textSize="20sp"            android:textStyle="bold" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#7D7D7D"        android:orientation="vertical" >        <HorizontalScrollView            android:id="@+id/horizontalScrollView1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:paddingBottom="8dp"            android:paddingLeft="5dp"            android:paddingRight="5dp"            android:paddingTop="8dp" >            <LinearLayout                android:id="@+id/linear_img"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="#7D7D7D"                android:orientation="horizontal" >            </LinearLayout>        </HorizontalScrollView>    </LinearLayout>    <!--<View-->        <!--android:layout_width="match_parent"-->        <!--android:layout_height="5dip" />-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:padding="8dp" >        <TextView            android:id="@+id/txt_queNo"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/black"            android:textSize="15sp"            android:textStyle="bold" />        <TextView            android:id="@+id/txt_question"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/black"            android:textSize="15sp"            android:textStyle="bold" />    </LinearLayout>    <!--<View-->        <!--android:layout_width="match_parent"-->        <!--android:layout_height="5dip" />-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight="4.1"        android:padding="10dp" >        <ScrollView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:fadeScrollbars="false">            <LinearLayout                android:id="@+id/parent_layout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical" >            </LinearLayout>        </ScrollView>    </LinearLayout>    <TextView        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight=".1"        />    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="0dip"        android:layout_marginLeft="10dp"        android:layout_marginRight="10dp"        android:layout_weight="0.7"        android:padding="5dp" >        <LinearLayout            android:id="@+id/btn_previousQue"            android:layout_width="140dip"            android:layout_height="40dip"            android:layout_alignParentLeft="true"            android:background="@drawable/style_button"            android:orientation="horizontal"            android:visibility="gone"            android:elevation="15dp"            android:stateListAnimator="@null">            <ImageView                android:id="@+id/imgnext"                android:layout_width="wrap_content"                android:layout_height="20dip"                android:layout_gravity="center_vertical"                android:layout_marginLeft="10dp"                android:src="@drawable/previous" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:layout_marginLeft="10dp"                android:padding="5dp"                android:text="PREVIOUS"                android:textColor="@color/white"                 />        </LinearLayout>        <Button            android:id="@+id/btn_finish"            android:layout_width="120dip"            android:layout_height="40dip"            android:layout_alignParentRight="true"            android:background="@drawable/style_button"            android:padding="5dp"            android:text="FINISH"            android:textColor="@color/white"            android:elevation="15dp"            android:stateListAnimator="@null"/>        <LinearLayout            android:id="@+id/btn_nextQue"            android:layout_width="120dip"            android:layout_height="40dip"            android:layout_alignParentRight="true"            android:background="@drawable/style_button"            android:orientation="horizontal"            android:elevation="15dp"            android:stateListAnimator="@null">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:layout_marginLeft="25dp"                android:padding="5dp"                android:text="NEXT"                android:textColor="@color/white"                 />            <ImageView                android:id="@+id/imgnext"                android:layout_width="wrap_content"                android:layout_height="20dip"                android:layout_gravity="center_vertical"                android:layout_marginLeft="10dp"                android:src="@drawable/survey_ten" />        </LinearLayout>    </RelativeLayout></LinearLayout>