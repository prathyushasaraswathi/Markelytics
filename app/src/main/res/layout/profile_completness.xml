<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:card_view="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:weightSum="1">    <LinearLayout        android:id="@+id/linear2"        android:layout_width="match_parent"        android:layout_height="20dip"        android:layout_weight=".1"        android:orientation="horizontal"        android:weightSum="4">        <LinearLayout            android:id="@+id/btn_recentSurvey"            android:layout_width="0dip"            android:layout_height="match_parent"            android:layout_weight="2"            android:background="@color/white"            android:orientation="vertical"            >            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_horizontal"                android:layout_marginTop="10dp"                android:text="Recent Surveys"                android:textColor="@color/color_wexpand"                android:textSize="17sp"/>            <View                android:layout_width="match_parent"                android:layout_height="2dip"                android:background="@color/color_wexpand"                android:layout_marginTop="10dp"                android:layout_marginBottom="10dp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:visibility="invisible"/>        </LinearLayout>        <LinearLayout            android:id="@+id/btn_yourBalance"            android:layout_width="0dip"            android:layout_height="match_parent"            android:layout_weight="2"            android:background="@color/white"            android:orientation="vertical"            >            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_horizontal"                android:layout_marginTop="10dp"                android:text="Available Surveys"                android:textColor="@color/color_wexpand"                android:textSize="17sp" />            <View                android:layout_width="match_parent"                android:layout_height="2dip"                android:background="@color/color_wexpand"                android:layout_marginTop="10dp"                android:layout_marginBottom="10dp"                android:layout_marginLeft="15dp"                android:layout_marginRight="15dp"/>        </LinearLayout>    </LinearLayout>    <ScrollView        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight=".9"        android:scrollbarFadeDuration="0"        >        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/white"            android:orientation="vertical">            <TextView                android:id="@+id/txt1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:layout_marginTop="20dp"                android:gravity="center_vertical"                android:text="Get More Surveys"                android:textColor="@color/black"                android:textSize="25sp"                android:textStyle="bold" />            <View                android:layout_width="wrap_content"                android:layout_height="5dip"                android:background="@color/white" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:background="@color/white"                android:orientation="vertical">                <TextView                    android:id="@+id/txt_totalPoints"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_horizontal"                    android:text="Profile Completeness"                    android:textColor="@color/black"                    android:textSize="17sp" />            </LinearLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="120dip"                android:background="@color/white">                <ProgressBar                    style="?android:attr/progressBarStyleHorizontal"                    android:layout_width="120dip"                    android:layout_height="match_parent"                    android:layout_centerInParent="true"                    android:indeterminate="false"                    android:max="100"                    android:progress="100"                    android:progressDrawable="@drawable/cirular_progress_background" />                <ProgressBar                    android:id="@+id/progressbar"                    style="?android:attr/progressBarStyleHorizontal"                    android:layout_width="120dip"                    android:layout_height="match_parent"                    android:layout_centerInParent="true"                    android:indeterminate="false"                    android:progressDrawable="@drawable/circular_progressbar_foreground"                    android:rotation="-90" />                <TextView                    android:id="@+id/txt_progressTxt"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:background="@android:color/transparent"                    android:gravity="center"                    android:textColor="@color/gray_shade"                    android:textSize="20sp"                    android:textStyle="bold" />            </RelativeLayout>            <android.support.v7.widget.CardView                android:id="@+id/card_view"                android:layout_width="260dip"                android:layout_height="wrap_content"                android:layout_alignParentTop="true"                android:layout_centerHorizontal="true"                android:layout_gravity="center"                android:layout_marginTop="10dp"                android:visibility="visible"                card_view:cardCornerRadius="5dp"                card_view:cardElevation="10dp"                card_view:cardUseCompatPadding="true"                >                <TextView                    android:id="@+id/txt_noSrvy"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerInParent="true"                    android:background="@color/color_wexpand"                    android:paddingBottom="5dp"                    android:paddingLeft="10dp"                    android:paddingRight="10dp"                    android:paddingTop="5dp"                    android:text="Sorry, Unfortunately there are no survey opportunity for you. Please, update your profile to get more surveys. "                    android:textColor="@color/white"                    android:textSize="15sp"                    android:visibility="visible" />            </android.support.v7.widget.CardView>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:background="@color/grayshde"                android:orientation="vertical">                <View                    android:layout_width="match_parent"                    android:layout_height="10dip" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    android:gravity="center"                    android:text="Here you will find survey opportunities currently available to you, along with an estimation of the length of the survey and the reward for successfully completing it."                    android:textColor="@color/black"                    android:textSize="15sp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@color/grayshde"                android:orientation="vertical"                android:padding="10dp"                android:weightSum="1">                <Button                    android:id="@+id/btn_viewProfile"                    android:layout_width="140dip"                    android:layout_height="35dip"                    android:layout_gravity="center"                    android:background="@drawable/style_button"                    android:elevation="15dp"                    android:gravity="center"                    android:padding="5dp"                    android:stateListAnimator="@null"                    android:text="VIEW PROFILE"                    android:textColor="@color/white" />                <!-- <View                    android:layout_width="10dp"                    android:layout_height="wrap_content" />                <Button                    android:id="@+id/btn_viewSurvey"                    android:layout_width="0dip"                    android:layout_height="40dip"                    android:layout_gravity="center"                    android:layout_weight=".5"                    android:background="@drawable/style_button"                    android:padding="5dp"                    android:text="View Survey"                    android:textColor="@color/white" /> -->            </LinearLayout>        </LinearLayout>    </ScrollView></LinearLayout>