<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:weightSum="5"    android:background="@color/white" >    <LinearLayout        android:id="@+id/linear2"        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_gravity="center"        android:layout_weight=".6"        android:background="@drawable/bg_two"        android:orientation="horizontal"        android:weightSum="4" >        <TextView            android:id="@+id/txt_t1"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight=".5" />        <TextView            android:id="@+id/txt_viewInfo"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_weight="3"            android:gravity="center"            android:text="Redeem Rewards"            android:textColor="@color/white"            android:textSize="20sp"            android:textStyle="bold" />        <TextView            android:id="@+id/txt_t2"            android:layout_width="0dip"            android:layout_height="wrap_content"            android:layout_weight=".5" />    </LinearLayout>    <TextView        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight=".5" />    <TextView        android:layout_width="wrap_content"        android:layout_height="0dip"        android:text="Payment Options"        android:id="@+id/text1"        android:textColor="@color/black"        android:textSize="17sp"        android:layout_weight=".5"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        />    <Spinner        android:id="@+id/spn_paymentMethod"        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight=".6"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        android:background="@drawable/spinner_big_blue"        />    <View        android:layout_width="match_parent"        android:layout_height="40dip"        />    <TextView        android:layout_width="wrap_content"        android:layout_height="0dip"        android:text="Points"        android:id="@+id/text2"        android:textColor="@color/black"        android:textSize="17sp"        android:layout_weight=".5"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        />    <Spinner        android:id="@+id/sp_points"        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight=".6"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        android:background="@drawable/spinner_big_blue"        />    <View        android:layout_width="match_parent"        android:layout_height="80dip"        />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight="1"        android:orientation="vertical"        >        <Button            android:id="@+id/btnRedeem"            android:layout_width="120dip"            android:layout_height="40dip"            android:text="REDEEM"            android:textColor="@color/white"            android:layout_gravity="center"            android:background="@drawable/style_button"            android:elevation="15dp"            android:stateListAnimator="@null"            />    </LinearLayout></LinearLayout>