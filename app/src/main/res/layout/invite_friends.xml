<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:orientation="vertical"    android:weightSum="4" >    <TextView        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight=".5" />    <RelativeLayout        android:id="@+id/innerRelative"        android:layout_width="wrap_content"        android:layout_height="0dip"        android:layout_marginBottom="10dp"        android:layout_marginLeft="25dp"        android:layout_marginRight="25dp"        android:layout_marginTop="10dp"        android:layout_weight="2.5" >        <TextView            android:id="@+id/txt_temail"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:text="E-mail"            android:textSize="18sp" />        <TextView            android:id="@+id/img_asterick"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:layout_toRightOf="@+id/txt_temail"            android:text="*"            android:textColor="@color/asterik_color"            android:textSize="15sp" />        <EditText            android:id="@+id/ed_temail"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/txt_temail"            android:layout_marginTop="10dp"            android:background="@drawable/login_back"            android:inputType="textEmailAddress"            android:padding="5dp" >            <requestFocus />        </EditText>        <Button            android:id="@+id/btn_invite"            android:layout_width="80dip"            android:layout_height="40dip"            android:layout_below="@+id/ed_temail"            android:layout_marginTop="20dp"            android:layout_marginLeft="10dp"            android:background="@drawable/style_button"            android:text="INVITE"            android:textColor="@color/white"            android:elevation="15dp"            android:stateListAnimator="@null"/>        <TextView            android:id="@+id/txt_sendInvitation"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/btn_invite"            android:layout_marginTop="40dp"            android:text="Send invitation via"            android:textColor="@drawable/text_hover"            android:textSize="18sp"            android:textStyle="bold"             android:layout_marginBottom="20dp"/>              <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/txt_sendInvitation"            android:orientation="horizontal" >            <ImageView                android:id="@+id/img_facebook"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:src="@drawable/facebook" />            <ImageView                android:id="@+id/img_google"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:src="@drawable/google"                 android:layout_marginLeft="20dp"                android:layout_marginTop="3dp"/>            <ImageView                android:id="@+id/img_linkedin"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:src="@drawable/linkedin"                android:layout_marginLeft="20dp"                 />        </LinearLayout>       </RelativeLayout></LinearLayout>