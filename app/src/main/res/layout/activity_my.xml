<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.markelytics.android.view.HomeScreenActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".12"
        android:background="@drawable/custom_background_bar"

        android:padding="10dp"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:src="@drawable/zo_final_logo" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/color_wexpand"
                android:textSize="25sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".89"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/color_wexpand"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/relativeSurvey"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight=".98"
            >

            <ImageView
                android:id="@+id/btnSurvey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/survey"/>

            <TextView
                android:id="@+id/txtSurvey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSurvey"
                android:layout_centerHorizontal="true"
                android:text="Survey"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeProfile"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight=".97"
            >

            <ImageView
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/profile"/>
            <TextView
                android:id="@+id/txtProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnProfile"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeRewards"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight=".98"
            >

            <ImageView
                android:id="@+id/btnRedeemRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rewards"/>
            <TextView
                android:id="@+id/txtRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnRedeemRewards"
                android:layout_centerHorizontal="true"
                android:text="Rewards"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeInvite"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight=".97"
            >

            <ImageView
                android:id="@+id/btnInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/invite"
                />
            <TextView
                android:id="@+id/txtInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnInvite"
                android:layout_centerHorizontal="true"
                android:text="Invite"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeAccount"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:layout_weight="1.1"
            >

            <ImageView
                android:id="@+id/btnMyAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/acct"
                />
            <TextView
                android:id="@+id/txtAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnMyAccount"
                android:layout_centerHorizontal="true"
                android:text="My Account"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>