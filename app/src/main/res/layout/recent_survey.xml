<?xml version="1.0" encoding="utf-8"?><LinearLayout android:id="@+id/linearLayout"              xmlns:android="http://schemas.android.com/apk/res/android"              xmlns:card_view="http://schemas.android.com/tools"              android:layout_width="match_parent"              android:layout_height="match_parent"              android:background="@color/white"              android:orientation="vertical"              android:weightSum="5">    <LinearLayout        android:id="@+id/linear2"        android:layout_width="match_parent"        android:layout_height="20dip"        android:layout_gravity="center"        android:layout_weight=".5"        android:orientation="horizontal"        android:weightSum="4">        <LinearLayout            android:id="@+id/btn_recentSurvey"            android:layout_width="0dip"            android:layout_height="match_parent"            android:layout_weight="2"            android:background="@color/white"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_horizontal"                android:layout_marginTop="10dp"                android:text="Recent Surveys"                android:textColor="@color/color_wexpand"                android:textSize="17sp"                />            <TextView                android:layout_width="match_parent"                android:layout_height="2dip"                android:layout_marginBottom="10dp"                android:layout_marginLeft="15dp"                android:layout_marginRight="15dp"                android:layout_marginTop="10dp"                android:background="@color/color_wexpand"/>        </LinearLayout>        <LinearLayout            android:id="@+id/btn_yourBalance"            android:layout_width="0dip"            android:layout_height="match_parent"            android:layout_weight="2"            android:background="@color/white"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_horizontal"                android:layout_marginTop="10dp"                android:text="Available Surveys"                android:textColor="@color/color_wexpand"                android:textSize="17sp"/>            <View                android:layout_width="match_parent"                android:layout_height="2dip"                android:layout_marginBottom="10dp"                android:layout_marginLeft="15dp"                android:layout_marginRight="15dp"                android:layout_marginTop="10dp"                android:background="@color/color_wexpand"                android:visibility="invisible"/>        </LinearLayout>    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight="4.5">        <android.support.v7.widget.RecyclerView            android:id="@+id/recyclerview"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:scrollbarFadeDuration="0"            android:scrollbars="vertical"/>        <android.support.v7.widget.CardView            android:id="@+id/card_view"            android:layout_width="260dip"            android:layout_height="wrap_content"            android:layout_alignParentTop="true"            android:layout_centerHorizontal="true"            android:layout_marginTop="30dp"            android:visibility="gone"            card_view:cardCornerRadius="5dp"            card_view:cardElevation="10dp"            card_view:cardUseCompatPadding="true">            <!-- <TextView                 android:id="@+id/txt_noSurvey"                 android:layout_width="wrap_content"                 android:layout_height="wrap_content"                 android:layout_centerInParent="true"                 android:gravity="center"                 android:padding="10dp"                 android:text="No survey avaliable right now, Please fill your profilers to receive more/appropriate surveys."                 android:textColor="@color/white"                 android:textSize="17sp"                 android:visibility="gone" />-->            <TextView                android:id="@+id/txt_noSurvey"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerInParent="true"                android:background="@color/color_wexpand"                android:gravity="center"                android:padding="10dp"                android:text="Recently you have not participated in any survey"                android:textColor="@color/white"                android:textSize="17sp"                android:visibility="gone"/>        </android.support.v7.widget.CardView>    </RelativeLayout>    <!-- <View         android:layout_width="match_parent"         android:layout_height="10dp"         />-->    <!-- <RelativeLayout         android:layout_width="match_parent"         android:layout_height="0dip"         android:layout_weight=".7"         >         <Button             android:id="@+id/btn_getMoreSrvy"             android:layout_width="170dip"             android:layout_height="40dip"             android:layout_centerInParent="true"             android:background="@drawable/style_button"             android:text="GET MORE SURVEY"             android:textColor="@color/white"             android:elevation="15dp"             android:padding="10dp"             android:stateListAnimator="@null"/>     </RelativeLayout> --></LinearLayout>